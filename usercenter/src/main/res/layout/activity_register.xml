<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="56dp"
    android:paddingRight="24dp">


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/icon_sign_in_wechat"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:text="{icon-weixintwo}"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:textColor="#04b00f"
        android:textSize="40sp"
        />
    <!--姓名-->
    <EditText
        android:id="@+id/edit_sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="姓名"
        android:inputType="textPersonName"
        tools:ignore="HardcodedText" />
    <!--手机号码-->
    <EditText
        android:id="@+id/edit_sign_up_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="手机号码"
        android:inputType="phone"
        tools:ignore="HardcodedText" />

    <!--密码-->
    <EditText
        android:id="@+id/edit_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="密码"
        android:inputType="textPassword"
        tools:ignore="HardcodedText" />


    <!--重复密码-->
    <EditText
        android:id="@+id/edit_sign_up_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="重复密码"
        android:inputType="textPassword"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:padding="12dp"
        android:text="注册"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_link_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="已经注册了？请登录"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

</LinearLayout>
